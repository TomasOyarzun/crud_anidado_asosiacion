<h1 class="text-center"> √Åreas </h1>

<table class="table table-dark">
  <thead>
    <tr>
      <th> Nombre </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @areas.each do |area| %>
      <tr>
        <td><%= area.name %></td>
        <td><%= link_to 'Show', area, class: 'btn btn-primary' %></td>
